{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
		"declaration": false,
		"module": "esnext",
		"moduleResolution": "node",
		"downlevelIteration": true,
    "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@/*": ["app/*"],
      "testing/*": ["testing/*"]
    }
	},
	"angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
